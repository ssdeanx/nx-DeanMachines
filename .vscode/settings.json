{
  // Editor settings
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always",
    "source.organizeImports": "always"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.wordWrap": "off",
  "editor.linkedEditing": true,
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,

  // TypeScript settings
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.autoImports": true,
  "typescript.preferences.quoteStyle": "single",
  "javascript.preferences.quoteStyle": "single",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,

  // Explorer settings
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.spec.ts, ${capture}.test.ts, ${capture}.stories.ts, ${capture}.stories.tsx, ${capture}.module.ts, ${capture}.model.ts, ${capture}.service.ts",
    "*.tsx": "${capture}.spec.tsx, ${capture}.test.tsx, ${capture}.stories.tsx, ${capture}.module.tsx, ${capture}.styles.*",
    "project.json": "*.json, .*.json",
    "nx.json": ".nxignore, .prettierrc, .prettierignore, .eslintrc.json",
    "jest.config.ts": "jest.preset.js, setup-jest.ts, jest.setup.ts, tsconfig.base.json, .nxignore, babel.config.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, .npmrc, .yarnrc, .pnpmrc",
    "*.d.ts": "${capture}.js",
    "tsconfig.*.json": "tsconfig.json",
    ".eslintrc.json": ".eslintignore, .prettierrc, .prettierignore, .editorconfig"
  },
  "explorer.compactFolders": false,
  "explorer.sortOrder": "type",

  // Search settings
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/tmp": true,
    "**/.nx": true,
    "**/coverage": true,
    "**/.angular": true,
    "**/hooks": true,
    "**/node": true
  },

  // Terminal
  "terminal.integrated.scrollback": 10000,

  // Nx-specific settings
  "nx.enableAutoImportIntellisense": true,
  "nx.cacheFolderPath": ".nx/cache",
  "nx.accessToken": "${env:NX_ACCESS_TOKEN}",
  "nx.showAllProjectSettings": true,
  "nx.showDependenciesAutoRefresh": true,
  "nx.showTargetsDefaults": true,
  "nx.cacheDirectory": ".nx/.cache",
  "nx.projectNameSeparator": ":",
  "nx.workspace.autodetect": true,
  "nx.enableCliRunCommands": true,
  "nx.cliRunOptions": ["--max-workers=4"],
  "nx.promptForSelectionIfMultipleTargetsAreAvailable": true,
  "nx.showTerminalOnRun": true,

  // Files
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.nx/**": true,
    "**/dist/**": true,
    "**/coverage/**": true,
    "**/.angular/**": true
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.exclude": {
    "**/.git": true,
    ".nx/cache": true,
    "**/node_modules/.cache": true
  },
  "files.useExperimentalFileWatcher": true,

  // Git
  "git.autofetch": true,
  "git.confirmSync": false,

  // Workbench
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.colorCustomizations": {
    "editorError.foreground": "#f44336",
    "editorWarning.foreground": "#ff9800",
    "editorInfo.foreground": "#2196f3"
  },

  // Reduce editor lag in large monorepos
  "editor.renderWhitespace": "boundary",
  "editor.renderControlCharacters": false,
  "editor.minimap.renderCharacters": false,

  // TypeScript performance settings
  "typescript.tsserver.maxTsServerMemory": 8192,
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,
  "typescript.tsserver.watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriorityPolling"
  },

  // Enhanced terminal for Nx commands
  "terminal.integrated.env.linux": {
    "NX_DAEMON": "true"
  },
  "terminal.integrated.env.osx": {
    "NX_DAEMON": "true"
  },
  "terminal.integrated.env.windows": {
    "NX_DAEMON": "true"
  },

  // Additional productivity settings
  "editor.quickSuggestions": {
    "strings": true
  },
  "todohighlight.keywords": [
    {
      "text": "TODO:",
      "color": "#FF8C00",
      "backgroundColor": "rgba(255,140,0,0.1)"
    },
    {
      "text": "FIXME:",
      "color": "#FF0000",
      "backgroundColor": "rgba(255,0,0,0.1)"
    }
  ],
  "editor.unicodeHighlight.allowedLocales": {
    "en": true
  },
  "cSpell.words": [
    "collab",
    "Ekman's",
    "libpeerconnection",
    "Metacognitive",
    "testem",
    "vite",
    "vitest"
  ]
}
